doctype 5
html
  head
    title Gallery
    link(rel='stylesheet',href='../css/butter.ui.css')
    style
      html,body {
        height: 100%;
      }
      body {
        font-family: "Open Sans", "Helvetica Neue", sans-serif;
        background: #F4F5F5;
        color: #888;
        margin: 0 auto;
        padding: 0;
        font-size: .9em;
        overflow: scroll;
      }
      .butter-nav {
        width: 100%;
      }
      .butter-project-title {
        max-width: none;
        cursor: default;
      }
      .project-listing {
        padding: 10px;
        overflow: hidden;
        margin: 10px;
      }
      .project-container {
        position: relative;
        float: left;
        background-color: #888;
        width: 20%;
        padding-bottom: 20%;
      }
      .project-detail {
        position: absolute;
        left: 10px;
        right: 10px;
        top: 10px;
        bottom: 10px;
        overflow: hidden;     
        padding: 10px;
        background-color: #fff; 	
      }
      .project-detail img {
        float: left;
        margin-right: 10px;
        border: 0;
      }
      .project-detail .project-links {
        width: 95%;
        clear: both;
        position: absolute;
        bottom: 5px;
      }
      .project-detail .project-links a {
        display: block;
      }
      .project-detail .project-links a.project-link {
        float: left;
      }
      .project-detail .project-links a.remix-link {
        float: right;
      }
