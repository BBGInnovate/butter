  body.butter-header-spacing.butter-editor-spacing
    div#butter-header.butter-header
      div.butter-header-primary
        div.butter-logo
        ul.butter-nav
          li.butter-breadcrumbs
          li.butter-project-title
            span.butter-name Gallery Recent Projects
    .project-listing
      each project in projects
        .project-container
          .project-detail
            h3 Project: 
              = project.name
            if project.description || project.thumbnail
              .project-description 
                if project.thumbnail
                  img(src=project.thumbnail,alt=project.name)
                if project.description
                  span.description Description: 
                  = project.description
            if project.author
              p.project-author Author:
                = project.author
            p.project-update Last Update: 
             = project.updatedAt
            div.project-links
              a.project-link(href=project.href) Details
              a.remix-link(href=project.remixHref) Remix